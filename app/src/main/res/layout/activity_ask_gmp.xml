<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.gmpsop.standardoperatingprocedures.Activities.AskGMP">

    <com.gmpsop.standardoperatingprocedures.CustomViews.MyTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="14sp"
        android:layout_margin="40dp"
        android:text="@string/ask_gmp_text" />

    <RelativeLayout
        android:layout_margin="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/ask_gmp_speakButton"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/ask_gmp_icon"/>

        <com.mikhaellopez.circularprogressbar.CircularProgressBar
            android:id="@+id/ask_gmp_progressBar"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:cpb_background_progressbar_color="@color/colorPrimaryLight2"
            app:cpb_background_progressbar_width="10dp"
            app:cpb_progressbar_color="@color/colorPrimaryLightOpacity"
            app:cpb_progressbar_width="10dp"
            app:cpb_progress="56"/>

    </RelativeLayout>

    <Chronometer
        android:id="@+id/ask_gmp_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textDirection="locale"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:id="@+id/ask_gmp_speechText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dummy"
        android:textColor="@color/colorPrimary"/>


</LinearLayout>
