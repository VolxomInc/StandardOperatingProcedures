<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.gmpsop.standardoperatingprocedures.Activities.ForgotPassword">


    <LinearLayout
        android:id="@+id/logo_slogan_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/search_option_Logo"
            style="@style/splashLogo"
            android:layout_width="@dimen/loginLogo_width"
            android:layout_height="@dimen/loginLogo_height"
            android:contentDescription="@string/sloganImageDescription"
            android:src="@drawable/logo" />

        <com.gmpsop.standardoperatingprocedures.CustomViews.MyTextView
            android:id="@+id/search_option_Slogan"
            style="@style/splashSlogan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sloganText" />

    </LinearLayout>

    <com.gmpsop.standardoperatingprocedures.CustomViews.MyTextView
        android:id="@+id/forgotPasswordMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="@string/forgot_password_enterEmail"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="14sp" />

    <LinearLayout
        style="@style/login_inputField_layout"
        android:background="@drawable/shape_rectangle_input_field"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:weightSum="1.0">

        <RelativeLayout
            android:layout_width="0.0dip"
            android:layout_height="30.0dip"
            android:layout_weight="0.9"
            android:gravity="center">

            <com.gmpsop.standardoperatingprocedures.CustomViews.MyEditText
                android:id="@+id/forgotPasswordEmail"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/loginEmailIdImage_width_height"
                android:background="@color/transparent"
                android:hint="@string/signUp_hintEmailAddress"
                android:inputType="textEmailAddress"
                android:padding="0.0dip"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/hint_text_color"
                android:textSize="12.0sp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/forgotPasswordButtonSendLayout"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rectangle_button"
        android:gravity="center"
        android:layout_margin="10dp"
        android:weightSum="0.49">

        <RelativeLayout
            android:layout_width="0.0dip"
            android:layout_height="30.0dip"
            android:layout_weight="0.39"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.gmpsop.standardoperatingprocedures.CustomViews.MyTextView
                    android:id="@+id/signUpButtonText"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/loginEmailIdImage_width_height"
                    android:layout_gravity="center"
                    android:text="@string/forgot_password_ButtonSendText"
                    android:textColor="@color/white" />

                <ImageView
                    android:id="@+id/signUpButtonPointer"
                    android:layout_width="35.0dip"
                    android:layout_height="@dimen/loginEmailIdImage_width_height"
                    android:contentDescription="@string/signUp_ButtonImage"
                    android:src="@drawable/login_pointer" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>
