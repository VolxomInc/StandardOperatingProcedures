<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/dashboard_slogan_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="15dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/dashboardLogo"
                    style="@style/splashLogo"
                    android:layout_width="@dimen/loginLogo_width"
                    android:layout_height="@dimen/loginLogo_height"
                    android:contentDescription="@string/sloganImageDescription"
                    android:src="@drawable/logo" />

                <com.gmpsop.standardoperatingprocedures.CustomViews.MyTextView
                    android:id="@+id/dashboardSlogan"
                    style="@style/dashboardSlogan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sloganText" />
            </LinearLayout>

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:columnCount="3"
                android:rowCount="3">

                <LinearLayout
                    android:id="@+id/dashboardLinearButton_notification"
                    android:layout_width="@dimen/dashboardGridCell_width"
                    android:layout_column="1"
                    android:layout_row="2"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <RelativeLayout
                        android:layout_width="@dimen/dashboardImageFrame_width_height"
                        android:layout_height="@dimen/dashboardImageFrame_width_height">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:adjustViewBounds="true"
                            android:contentDescription="@string/gridLayoutImageViewDescription"
                            android:src="@drawable/dashboard_notification" />
                    </RelativeLayout>

                    <com.gmpsop.standardoperatingprocedures.CustomViews.MyTextView
                        style="@style/dashboardGridText"
                        android:text="@string/dashboard_notifications" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/dashboardLinearButton_searchGmpTerm"
                    android:layout_width="@dimen/dashboardGridCell_width"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5.0dip">

                    <RelativeLayout
                        android:layout_width="@dimen/dashboardImageFrame_width_height"
                        android:layout_height="@dimen/dashboardImageFrame_width_height">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:adjustViewBounds="true"
                            android:contentDescription="@string/gridLayoutImageViewDescription"
                            android:src="@drawable/dashboard_search_a_gmp_term" />
                    </RelativeLayout>

                    <com.gmpsop.standardoperatingprocedures.CustomViews.MyTextView
                        style="@style/dashboardGridText"
                        android:text="@string/dashboard_searchGMP" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/dashboardLinearButton_gmpDiscussionForum"
                    android:layout_width="@dimen/dashboardGridCell_width"
                    android:layout_column="1"
                    android:layout_row="0"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5.0dip">

                    <RelativeLayout
                        android:layout_width="@dimen/dashboardImageFrame_width_height"
                        android:layout_height="@dimen/dashboardImageFrame_width_height">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:adjustViewBounds="true"
                            android:contentDescription="@string/gridLayoutImageViewDescription"
                            android:src="@drawable/dashboard_gmp_discussion_form" />
                    </RelativeLayout>

                    <com.gmpsop.standardoperatingprocedures.CustomViews.MyTextView
                        style="@style/dashboardGridText"
                        android:text="@string/dashboard_discussForum" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/dashboardLinearButton_sampleDocument"
                    android:layout_width="@dimen/dashboardGridCell_width"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5.0dip">

                    <RelativeLayout
                        android:layout_width="@dimen/dashboardImageFrame_width_height"
                        android:layout_height="@dimen/dashboardImageFrame_width_height">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:adjustViewBounds="true"
                            android:contentDescription="@string/gridLayoutImageViewDescription"
                            android:src="@drawable/dashboard_pick_from_gmp_sop_library" />
                    </RelativeLayout>

                    <com.gmpsop.standardoperatingprocedures.CustomViews.MyTextView
                        style="@style/dashboardGridText"
                        android:text="@string/dashboard_sampleDocument" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/dashboardLinearButton_buyFromSopLibrary"
                    android:layout_width="@dimen/dashboardGridCell_width"
                    android:layout_column="1"
                    android:layout_row="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5.0dip">

                    <RelativeLayout
                        android:layout_width="@dimen/dashboardImageFrame_width_height"
                        android:layout_height="@dimen/dashboardImageFrame_width_height">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:adjustViewBounds="true"
                            android:contentDescription="@string/gridLayoutImageViewDescription"
                            android:src="@drawable/dashboard_access_to_gmp" />
                    </RelativeLayout>

                    <com.gmpsop.standardoperatingprocedures.CustomViews.MyTextView
                        style="@style/dashboardGridText"
                        android:text="@string/dashboard_accessToSOPLibrary" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/dashboardLinearButton_overView"
                    android:layout_width="@dimen/dashboardGridCell_width"
                    android:layout_column="2"
                    android:layout_row="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5.0dip">

                    <RelativeLayout
                        android:layout_width="@dimen/dashboardImageFrame_width_height"
                        android:layout_height="@dimen/dashboardImageFrame_width_height">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:adjustViewBounds="true"
                            android:contentDescription="@string/gridLayoutImageViewDescription"
                            android:src="@drawable/dashboard_overview" />
                    </RelativeLayout>

                    <com.gmpsop.standardoperatingprocedures.CustomViews.MyTextView
                        style="@style/dashboardGridText"
                        android:text="@string/dashboard_overView" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/dashboardLinearButton_FAQs"
                    android:layout_width="@dimen/dashboardGridCell_width"
                    android:layout_column="0"
                    android:layout_row="2"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5.0dip">

                    <RelativeLayout
                        android:layout_width="@dimen/dashboardImageFrame_width_height"
                        android:layout_height="@dimen/dashboardImageFrame_width_height">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:adjustViewBounds="true"
                            android:contentDescription="@string/gridLayoutImageViewDescription"
                            android:src="@drawable/dashboard_faq" />
                    </RelativeLayout>

                    <com.gmpsop.standardoperatingprocedures.CustomViews.MyTextView
                        style="@style/dashboardGridText"
                        android:text="@string/dashboard_FAQs" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/dashboardLinearButton_aboutUs"
                    android:layout_width="@dimen/dashboardGridCell_width"
                    android:layout_column="2"
                    android:layout_row="0"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5.0dip">

                    <RelativeLayout
                        android:layout_width="@dimen/dashboardImageFrame_width_height"
                        android:layout_height="@dimen/dashboardImageFrame_width_height">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:adjustViewBounds="true"
                            android:contentDescription="@string/gridLayoutImageViewDescription"
                            android:src="@drawable/dashboard_about_us" />
                    </RelativeLayout>

                    <com.gmpsop.standardoperatingprocedures.CustomViews.MyTextView
                        style="@style/dashboardGridText"
                        android:text="@string/dashboard_aboutUs" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/dashboardLinearButton_contactUs"
                    android:layout_width="@dimen/dashboardGridCell_width"
                    android:layout_column="2"
                    android:layout_row="2"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5.0dip">

                    <RelativeLayout
                        android:layout_width="@dimen/dashboardImageFrame_width_height"
                        android:layout_height="@dimen/dashboardImageFrame_width_height">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:adjustViewBounds="true"
                            android:contentDescription="@string/gridLayoutImageViewDescription"
                            android:src="@drawable/dashboard_contact_us" />
                    </RelativeLayout>

                    <com.gmpsop.standardoperatingprocedures.CustomViews.MyTextView
                        style="@style/dashboardGridText"
                        android:text="@string/dashboard_contactUs" />
                </LinearLayout>
            </GridLayout>

            <LinearLayout
                android:id="@+id/dashboard_loginSignUpLayout"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:weightSum="3">

                <RelativeLayout
                    android:id="@+id/dashboardLoginButton"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1.2"
                    android:background="@drawable/shape_rectangle_button"
                    android:gravity="center">

                    <com.gmpsop.standardoperatingprocedures.CustomViews.MyTextView
                        android:id="@+id/dashboardLoginButtonText"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/loginEmailIdImage_width_height"
                        android:layout_gravity="center"
                        android:text="@string/login_button"
                        android:textColor="@color/white" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="0.6"
                    android:gravity="center">


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/dashboardSignUpButton"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1.2"
                    android:background="@drawable/shape_rectangle_button"
                    android:gravity="center">

                    <com.gmpsop.standardoperatingprocedures.CustomViews.MyTextView
                        android:id="@+id/dashboardSignUpButtonText"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/loginEmailIdImage_width_height"
                        android:layout_gravity="center"
                        android:text="@string/signUp_ButtonText"
                        android:textColor="@color/white" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/dashboard_logoutLayout"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:weightSum="3">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1.2" />


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="0.6"
                    android:gravity="center" />

                <RelativeLayout
                    android:id="@+id/dashboardLogoutButton"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1.2"
                    android:background="@drawable/shape_rectangle_button"
                    android:gravity="center">

                    <com.gmpsop.standardoperatingprocedures.CustomViews.MyTextView
                        android:id="@+id/dashboardLogoutButtonText"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/loginEmailIdImage_width_height"
                        android:layout_gravity="center"
                        android:text="@string/dashboard_Logout"
                        android:textColor="@color/white" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>