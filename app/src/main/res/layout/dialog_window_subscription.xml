<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/dialogSubscription_icon"
        android:layout_width="@dimen/loginLogo_width"
        android:layout_height="@dimen/loginLogo_width"
        android:src="@drawable/dialog_subscription_icon"/>

    <com.gmpsop.standardoperatingprocedures.CustomViews.MyTextViewBold
        android:id="@+id/dialogSubscription_title"
        style="@style/dialogTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:text="@string/dialogSubscription_title" />

    <com.gmpsop.standardoperatingprocedures.CustomViews.MyTextView
        android:id="@+id/dialogSubscription_description"
        style="@style/dialogTextStyle"
        android:layout_width="@dimen/dialogTextWidth"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:text="@string/dialogSubscription_description" />

    <LinearLayout
        android:id="@+id/dialogSubscriptionLinearButton_SampleDocument"
        style="@style/login_inputField_layout"
        android:layout_margin="5dp"
        android:background="@drawable/shape_rectangle_input_field"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:weightSum="1.0">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="0.9"
            android:gravity="center">

            <com.gmpsop.standardoperatingprocedures.CustomViews.MyTextViewBold
                android:layout_width="match_parent"
                android:layout_height="14dp"
                android:background="@color/transparent"
                android:padding="0dp"
                android:text="@string/dialogSubscription_sampleDocument"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dialogSubscriptionLinearButton_membership"
        style="@style/login_inputField_layout"
        android:layout_margin="5dp"
        android:background="@drawable/shape_rectangle_input_field"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:weightSum="1.0">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="0.9"
            android:gravity="center">

            <com.gmpsop.standardoperatingprocedures.CustomViews.MyTextViewBold
                android:layout_width="match_parent"
                android:layout_height="14dp"
                android:background="@color/transparent"
                android:padding="0dp"
                android:text="@string/about_us_get_your_membership_now"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>