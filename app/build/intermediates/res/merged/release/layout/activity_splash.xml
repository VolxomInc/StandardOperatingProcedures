<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.gmpsop.standardoperatingprocedures.Activities.Splash">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/splashLogo"
            style="@style/splashLogo"
            android:layout_width="@dimen/splashLogo_width"
            android:layout_height="@dimen/splashLogo_height"
            android:contentDescription="@string/sloganImageDescription"
            android:src="@drawable/logo" />

        <com.gmpsop.standardoperatingprocedures.CustomViews.MyTextView
            android:id="@+id/splashSlogan"
            style="@style/splashSlogan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sloganText" />

    </LinearLayout>

</RelativeLayout>
