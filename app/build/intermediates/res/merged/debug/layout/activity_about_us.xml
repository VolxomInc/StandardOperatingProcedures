<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context="com.gmpsop.standardoperatingprocedures.Activities.TermAndConditions">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.gmpsop.standardoperatingprocedures.CustomViews.MyTextViewBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            android:text="@string/aboutUs_title"/>

        <com.gmpsop.standardoperatingprocedures.CustomViews.MyTextViewBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="20dp"
            android:text="@string/aboutUs_quest1"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp" />

        <com.gmpsop.standardoperatingprocedures.CustomViews.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/aboutUs_ans1"
            android:textColor="@color/sloganColorBlack"
            android:textSize="14sp" />
        <com.gmpsop.standardoperatingprocedures.CustomViews.MyTextViewBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="20dp"
            android:text="@string/aboutUs_quest2"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp" />

        <com.gmpsop.standardoperatingprocedures.CustomViews.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/aboutUs_ans2"
            android:textColor="@color/sloganColorBlack"
            android:textSize="14sp" />
        <com.gmpsop.standardoperatingprocedures.CustomViews.MyTextViewBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="20dp"
            android:text="@string/aboutUs_quest3"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp" />

        <com.gmpsop.standardoperatingprocedures.CustomViews.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/aboutUs_ans3"
            android:layout_marginLeft="20dp"
            android:textColor="@color/sloganColorBlack"
            android:textSize="14sp" />

    </LinearLayout>
</ScrollView>