<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/dialogLogin_icon"
        android:layout_width="@dimen/loginLogo_width"
        android:layout_height="@dimen/loginLogo_width"
        android:src="@drawable/dialog_subscription_icon"/>

    <com.gmpsop.standardoperatingprocedures.CustomViews.MyTextViewBold
        android:id="@+id/dialogLogin_title"
        style="@style/dialogTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:text="@string/dialogLogin_title" />

    <com.gmpsop.standardoperatingprocedures.CustomViews.MyTextView
        android:id="@+id/dialogLogin_description"
        style="@style/dialogTextStyle"
        android:layout_width="@dimen/dialogTextWidth"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:text="@string/dialogSubscription_description" />

    <LinearLayout
        android:id="@+id/dialogLoginLinearButton_SampleDocument"
        style="@style/login_inputField_layout"
        android:layout_margin="5dp"
        android:background="@drawable/shape_rectangle_input_field"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:weightSum="1.0">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="0.9"
            android:gravity="center">

            <com.gmpsop.standardoperatingprocedures.CustomViews.MyTextViewBold
                android:layout_width="match_parent"
                android:layout_height="14dp"
                android:background="@color/transparent"
                android:padding="0dp"
                android:text="@string/dialogSubscription_sampleDocument"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        style="@style/login_inputField_layout"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1.0">

        <LinearLayout
            android:id="@+id/dialogLoginLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.48"
            android:background="@drawable/shape_rectangle_input_field"
            android:gravity="center"
            android:weightSum="0.49">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center">

                <com.gmpsop.standardoperatingprocedures.CustomViews.MyTextViewBold
                    android:id="@+id/dialogLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/login_button"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.04" />

        <LinearLayout
            android:id="@+id/dialogLogin_signUpLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.48"
            android:background="@drawable/shape_rectangle_input_field"
            android:gravity="center"
            android:weightSum="0.49">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center">

                <com.gmpsop.standardoperatingprocedures.CustomViews.MyTextViewBold
                    android:id="@+id/dialogLogin_signUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/signUp_ButtonText"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>