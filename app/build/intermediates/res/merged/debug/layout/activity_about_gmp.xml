                        android:adjustViewBounds="true"
                        android:contentDescription="@string/about_us_sterile_non_sterile_manufacturing_operation"
                        android:src="@drawable/about_us_sterile_non_sterile_manufacturing_operation" />
                </RelativeLayout>

                <com.gmpsop.standardoperatingprocedures.CustomViews.MyTextView
                    style="@style/aboutUsGridText"
                    android:text="@string/about_us_sterile_non_sterile_manufacturing_operation" />
            </LinearLayout>

        </GridLayout>


