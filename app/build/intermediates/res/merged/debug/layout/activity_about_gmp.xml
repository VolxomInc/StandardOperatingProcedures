                        android:adjustViewBounds="true"
                        android:contentDescription="@string/about_us_gmp_quality_management_system"
                        android:src="@drawable/about_us_gmp_quality_management_system" />
                </RelativeLayout>

                <com.gmpsop.standardoperatingprocedures.CustomViews.MyTextView
                    style="@style/aboutUsGridText"
                    android:text="@string/about_us_gmp_quality_management_system" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/aboutUsLinearButton_gmp_process_cleaning_method_validation"
                android:layout_width="@dimen/aboutUsGridCell_width"
                android:layout_column="0"
                android:layout_row="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="5.0dip">

                <RelativeLayout
                    android:layout_width="@dimen/aboutUsImageFrame_width_height"
                    android:layout_height="@dimen/aboutUsImageFrame_width_height">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:contentDescription="@string/about_us_gmp_process_cleaning_method_validation"
                        android:src="@drawable/about_us_gmp_process_cleaning_method_validation" />
                </RelativeLayout>

                <com.gmpsop.standardoperatingprocedures.CustomViews.MyTextView
                    style="@style/aboutUsGridText"
                    android:text="@string/about_us_gmp_process_cleaning_method_validation" />
            </LinearLayout>

            <LinearLayout
