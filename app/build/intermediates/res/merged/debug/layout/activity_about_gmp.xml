<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gmpsop.standardoperatingprocedures.Activities.AboutGMP">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/aboutUs_slogan_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="15dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.gmpsop.standardoperatingprocedures.CustomViews.MyTextView
                android:id="@+id/aboutUsSlogan"
                style="@style/aboutUsSlogan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/aboutUsSloganText" />
        </LinearLayout>

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2">

            <LinearLayout
                android:id="@+id/aboutUsLinearButton_analytical_microBiology_lab"
                android:layout_width="@dimen/aboutUsGridCell_width"
                android:layout_column="0"
                android:layout_row="0"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="5dp">

                <RelativeLayout
                    android:layout_width="@dimen/aboutUsImageFrame_width_height"
                    android:layout_height="@dimen/aboutUsImageFrame_width_height">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:contentDescription="@string/about_us_analytical_microBiology_lab"
                        android:src="@drawable/about_us_analytical_microbiology_lab" />
                </RelativeLayout>

                <com.gmpsop.standardoperatingprocedures.CustomViews.MyTextView
                    style="@style/aboutUsGridText"
                    android:text="@string/about_us_analytical_microBiology_lab" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/aboutUsLinearButton_gmp_quality_management_system"
                android:layout_width="@dimen/aboutUsGridCell_width"
                android:layout_column="1"
                android:layout_row="0"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="5.0dip">

                <RelativeLayout
                    android:layout_width="@dimen/aboutUsImageFrame_width_height"
                    android:layout_height="@dimen/aboutUsImageFrame_width_height">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
